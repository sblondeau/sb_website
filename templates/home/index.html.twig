{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" data-turbo-track="reload" href="{{ asset('styles/home.css') }}">
{% endblock %}

{% block title %}
	Sylvain Blondeau - Développeur Freelance PHP Symfony - 100% télétravail
{% endblock %}

{% block header %}{% endblock %}

