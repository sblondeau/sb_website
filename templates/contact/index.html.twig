{% extends 'base.html.twig' %}

{% block title %}SB Freelance | Contact
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" data-turbo-track="reload" href="{{ asset('styles/contact.css') }}">
{% endblock %}

{% block body %}
	<main>
		<div class="title">
			<h1>Me contacter</h1>
			<h2>Un projet ? une précision ? il suffit de demander</h2>
		</div>
		{{ form_start(form) }}
		{{ form_widget(form) }}
		<div class="arrow-block hide-sm">
			<img class="arrow" src="{{ asset('images/arrows/rotated-right.png')}}" alt="">
			<span class="arrow-block-text">Soyez le plus précis possible, nous gagnerons du temps</span>
		</div>

		<button class="btn">
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send-fill" viewbox="0 0 16 16">
				<path d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 3.178 4.995.002.002.26.41a.5.5 0 0 0 .886-.083l6-15Zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471-.47 1.178Z"/>
			</svg>
			Envoyer
		</button>
		{{ form_end(form) }}
		<p>Vous pouvez aussi m'écrire directement sur <strong>contact@sylvainblondeau.dev</strong></p>
	</main>
	<footer>
		<a class="" href="{{ path('app_offer') }}">
			<img class="icon" src="{{ asset('images/offer.png') }}" alt="">
			Mon offre
		</a>
		<a class="" href="{{ path('app_home')}}">
			<img class="icon" src="{{ asset('images/home.png') }}" alt="">
			Retour à l'accueil
		</a>
	</footer>
{% endblock %}
