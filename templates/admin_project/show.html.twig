{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ project.title }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ project.date|date('Y') }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Referral</th>
                <td>{{ project.referral }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ project.url }}</td>
            </tr>
            <tr>
                <th>Customer</th>
                <td>{{ project.customer }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_project_index') }}">back to list</a>

    <a href="{{ path('app_admin_project_edit', {'id': project.id}) }}">edit</a>

    {{ include('admin_project/_delete_form.html.twig') }}
{% endblock %}
